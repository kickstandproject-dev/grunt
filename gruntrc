# Toggle full debugging for puppet.
GRUNT_PUPPET_CONFIG_DEBUG=${GRUNT_PUPPET_CONFIG_DEBUG:-false}

# Whether to use colors when logging to the console.
GRUNT_PUPPET_CONFIG_COLOR=${GRUNT_PUPPET_CONFIG_COLOR:-true}

# Repositories

# Base GIT Repo URL
GIT_BASE=${GIT_BASE:-https://github.com}

# backblast service
export FACTER_backblast_repo=${FACTER_backblast_repo:-${GIT_BASE}/kickstandproject/backblast.git}
export FACTER_backblast_branch=${FACTER_backblast_branch:-master}

# fastdraw service
export FACTER_fastdraw_repo=${FACTER_fastdraw_repo:-${GIT_BASE}/kickstandproject/fastdraw.git}
export FACTER_fastdraw_branch=${FACTER_fastdraw_branch:-master}

# wildcard service
export FACTER_wildcard_repo=${FACTER_wildcard_repo:-${GIT_BASE}/kickstandproject/wildcard.git}
export FACTER_wildcard_branch=${FACTER_wildcard_branch:-master}

# Base database type
export FACTER_database_host=${FACTER_database_host:-127.0.0.1}
export FACTER_database_type=${FACTER_database_type:-mysql}

# class kickstandproject::grunt::ceilometer
export FACTER_ceilometer_db_name=${FACTER_ceilometer_db_name:-ceilometer}
export FACTER_ceilometer_db_password=${FACTER_ceilometer_db_password:-ceilometer}
export FACTER_ceilometer_db_user=${FACTER_ceilometer_db_user:-ceilometer}

# class kickstandproject::grunt::keystone
export FACTER_keystone_db_name=${FACTER_keystone_db_name:-keystone}
export FACTER_keystone_db_password=${FACTER_keystone_db_password:-keystone}
export FACTER_keystone_db_user=${FACTER_keystone_db_user:-keystone}

export FACTER_keystone_grunt_email=${FACTER_keystone_grunt_email:-grunt@localhost}
export FACTER_keystone_grunt_password=${FACTER_keystone_grunt_password:-grunt}
export FACTER_keystone_grunt_tenant=${FACTER_keystone_grunt_tenant:-grunt}
export FACTER_keystone_grunt_user=${FACTER_keystone_grunt_user:-grunt}

# payload service
export FACTER_payload_repo=${FACTER_payload_repo:-${GIT_BASE}/kickstandproject/payload.git}
export FACTER_payload_branch=${FACTER_payload_branch:-master}

export FACTER_payload_db_name=${FACTER_payload_db_name:-payload}
export FACTER_payload_db_password=${FACTER_payload_db_password:-payload}
export FACTER_payload_db_user=${FACTER_payload_db_user:-payload}

# ripcord service
export FACTER_ripcord_repo=${FACTER_ripcord_repo:-${GIT_BASE}/kickstandproject/ripcord.git}
export FACTER_ripcord_branch=${FACTER_ripcord_branch:-master}

export FACTER_ripcord_db_name=${FACTER_ripcord_db_name:-ripcord}
export FACTER_ripcord_db_password=${FACTER_ripcord_db_password:-ripcord}
export FACTER_ripcord_db_user=${FACTER_ripcord_db_user:-ripcord}
