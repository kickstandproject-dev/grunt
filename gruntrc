export FACTER_keystone_db_user=${FACTER_keystone_db_user:-keystone}

export FACTER_keystone_grunt_email=${FACTER_keystone_grunt_email:-grunt@localhost}
export FACTER_keystone_grunt_password=${FACTER_keystone_grunt_password:-grunt}
